@prefix :      <#> .
@prefix fuseki: <http://jena.apache.org/fuseki#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix tdb2:  <http://jena.apache.org/tdb2#> .
@prefix ja:    <http://jena.hpl.hp.com/2005/11/Assembler#> .

# Fuseki Service definition
:service rdf:type fuseki:Service ;
         fuseki:name "dataset" ;                      # Name of the dataset
         fuseki:serviceQuery "sparql" ;               # SPARQL Query endpoint
         fuseki:serviceUpdate "update" ;              # SPARQL Update endpoint
         fuseki:serviceReadGraphStore "get" ;         # Graph Store Protocol (read)
         fuseki:serviceReadWriteGraphStore "data" ;   # Graph Store Protocol (read-write)
         fuseki:dataset :dataset .

# Dataset definition
:dataset rdf:type tdb2:DatasetTDB2, ja:Object ;
         tdb2:location "/fuseki/databases/dataset" ;  # Path to the dataset directory
         tdb2:unionDefaultGraph true .                # (Optional) Combine all graphs for queries
